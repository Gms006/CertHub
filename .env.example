# API
ENV=dev
API_HOST=0.0.0.0
API_PORT=8000

# DB
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/certhub

# Redis/RQ
REDIS_URL=redis://localhost:6379/0
RQ_DEFAULT_QUEUE=default

# Multi-tenant (se já tiver org_id/GUC no seu core)
DEFAULT_ORG_ID=1

# Catálogo de certificados (catálogo/ingest)
CERTS_ROOT_PATH=G:\Certificados Digitais
OPENSSL_PATH=C:\Program Files\OpenSSL-Win64\bin\openssl.exe

# JWT (S2)
JWT_SECRET=CHANGE_ME
ACCESS_TOKEN_TTL_MIN=30
REFRESH_TTL_DAYS=14
SET_PASSWORD_TOKEN_TTL_MIN=10
RESET_PASSWORD_TOKEN_TTL_MIN=30
BCRYPT_COST=12
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_MINUTES=15
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax
COOKIE_HTTPONLY=true
ALLOW_LEGACY_HEADERS=true

# Agent (S4+)
AGENT_API_KEY=CHANGE_ME_LONG_RANDOM
